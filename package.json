{
  "name": "forge-vscode",
  "displayName": "Forge Code",
  "description": "AI-enabled pair programmer for Claude, GPT, and 300+ models. Seamlessly integrate Forge AI assistant into your VS Code workflow.",
  "version": "0.9.1",
  "icon": "images/icon.png",
  "publisher": "ForgeCode",
  "author": "Antinomy <support@antinomy.ai>",
  "engines": {
    "vscode": "^1.102.0"
  },
  "categories": [
    "AI",
    "Other"
  ],
  "keywords": [
    "ai",
    "assistant",
    "claude",
    "gpt",
    "pair programming",
    "terminal",
    "coding assistant"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/antinomyhq/forge"
  },
  "homepage": "https://forgecode.dev",
  "bugs": {
    "url": "https://github.com/antinomyhq/forge/issues"
  },
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "forgecode.startNewForgeSession",
        "title": "Start New Forge Session",
        "icon": {
          "light": "images/favicon-dark.svg",
          "dark": "images/favicon-light.svg"
        }
      },
      {
        "command": "forgecode.copyFileReference",
        "title": "Copy File Reference"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "forgecode.startNewForgeSession",
          "group": "navigation"
        }
      ],
      "editor/context": [
        {
          "command": "forgecode.startNewForgeSession",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "Forge",
      "properties": {
        "forge.showInstallationPrompt": {
          "type": "boolean",
          "default": true,
          "description": "Show installation prompt when Forge is not detected"
        },
        "forge.pasteDelay": {
          "type": "number",
          "default": 5000,
          "description": "Milliseconds to wait before auto-pasting into new terminal (allows Forge to start)"
        },
        "forge.terminalMode": {
          "type": "string",
          "enum": [
            "once",
            "never"
          ],
          "enumDescriptions": [
            "Open terminal once and reuse it for subsequent operations",
            "Never open terminal, only copy file reference to clipboard"
          ],
          "default": "once",
          "description": "Controls terminal interaction when copying file references"
        }
      }
    },
    "keybindings": [
      {
        "command": "forgecode.copyFileReference",
        "title": "Copy File Reference",
        "key": "ctrl+u",
        "mac": "ctrl+u",
        "win": "ctrl+u",
        "linux": "ctrl+u"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.102.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "esbuild": "^0.25.3",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.8.3",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
